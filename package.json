{
  "name": "autobarrel",
  "displayName": "Auto Barrel",
  "description": "Create automatic barrels in your projects.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.91.0"
  },
  "categories": [
    "Other"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "autobarrel.createBarrel",
        "title": "Create Barrel"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Barrel File Configuration",
      "properties": {
        "autobarrel.removeExtension": {
          "type": "boolean",
          "default": true,
          "description": "Remove the file extension in export statements."
        },
        "autobarrel.useJavaScript": {
          "type": "boolean",
          "default": false,
          "description": "Use .js extension instead of .ts."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.91.0",
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "eslint": "^8.56.0",
    "typescript": "^5.3.3",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.8"
  }
}
